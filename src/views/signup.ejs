<% include header.ejs %>
<% include navbar.ejs %>
<div class='main'>
  <div class='topic-list'>
    <div class='header'>
      <div class='header-tab'>
        <a href='/'>全部</a>
      </div>
      <div class='header-tab'>
        精华
      </div>
      <div class='header-tab'>
        分享
      </div>
      <div class='header-tab'>
        问答
      </div>
      <div class='header-tab'>
        招聘
      </div>
      <div class='header-tab'>
        客户端测试
      </div>
    </div>

    <% topicListData.forEach(function(item){ %>
    <div key={item.id} class='cell'>
      <div class='user-avatar'>
        <a href='/user/<%= item.author.loginname %>'>
          <img src=<%= item.author.avatar_url %> />
        </a>
      </div>
      <div class='reply-count'>
        <%= item.reply_count %>/<%= item.visit_count %>
      </div>
      <div class='topic_title_wrapper'>
        <span class='topiclist-tab'>
          <%= (item.top? '置顶': getTab(item.tab)) %>
        </span>
        <a href='/topic/<%= item.id %>' class='topic-title'><%= item.title %></a>
      </div>
      <div class='last-time'>
        <%= dateFromNow(item.last_reply_at) %>
      </div>
    </div>
    <% }); %>
    <div class='pagination'>
    </div>
  </div>
  <div class='sidebar'>
    <div class='sidebar-user'>
      <div class='sidebar-user-title'>个人信息</div>
      <div class='inner'>
        <div class='sidebar-user-info'>
          <img src='<%= userInfo.avatar_url %>' />
          <span class='sidebar-user-name'><%= userInfo.login %></span>
        </div>
        <div>积分：0</div>
        <div>“ 这家伙很懒，什么个性签名都没有留下。 ”</div>
      </div>
    </div>
    <div class='inner'>
      <a href='/create'>
        <div class='create-topic-btn'>发布话题</div>
      </a>
    </div>
  </div>
</div>

<% include footer.ejs %>